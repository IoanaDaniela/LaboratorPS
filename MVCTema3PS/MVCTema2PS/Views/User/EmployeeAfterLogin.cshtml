@model IEnumerable<MVCTema2PS.Models.Show>

@{
    ViewBag.Title = "EmployeeAfterLogin";
}


@if (Session["LoggedUserFirstname"] != null && Session["LoggedUserLastname"] != null)
{
    <text>
        Welcome @Session["LoggedUserFirstname"].ToString() @Session["LoggedUserLastname"].ToString(), you are logged as an employee 
    </text>
}



<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShowName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distribution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tickets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableTickets)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShowName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distribution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableTickets)
            </td>
            <td>
                @Html.ActionLink("AddTicket", "AddTicketForSpecifiedShow", "Ticket", new { showId = item.ShowID }, null) 
                @Html.ActionLink("TicketsList", "TicketsListForSpecifiedShow", "Ticket", new { showId = item.ShowID }, null)
                @Html.ActionLink("ExportXML", "XMLExportForSpecifiedShow", "Ticket", new { showId = item.ShowID }, null)
                @Html.ActionLink("ExportCSV", "CSVExport", "Ticket", new { showId = item.ShowID }, null)
                @Html.ActionLink("ExportJSON", "JSONExport", "Ticket", new { showId = item.ShowID }, null)
            </td>
        </tr>
    }

</table>